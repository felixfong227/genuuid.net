---
import FaqSection from '../components/FaqSection.astro';
import UuidApp from '../components/UuidApp';
import BaseLayout from '../layouts/BaseLayout.astro';
export const prerender = true;

const title = 'UUID v1 Generator (Timestamp) | genuuid.net';
const description =
    'Generate RFC 4122 UUID version 1 (timestamp-based) locally in your browser. Copy a single UUID or bulk-generate up to 500 at once.';

const site = Astro.site?.toString() ?? 'https://genuuid.net';
const pageUrl = new URL(Astro.url.pathname, site).toString();

const faqItems = [
    {
        question: 'What is UUID v1?',
        answer: 'UUID v1 is a timestamp-based UUID format. It combines time with a node identifier to produce unique values.',
    },
    {
        question: 'Is UUID v1 safe to expose publicly?',
        answer: 'It depends. UUID v1 is useful when you want roughly time-ordered IDs and legacy compatibility, and it can be totally fine for internal identifiers or cases where leaking creation time isn’t a concern. The downside is that v1 encodes a timestamp (and can include a node identifier), which may reveal metadata and ordering. For public-facing IDs, v4 or v7 is usually a better default.',
    },
    {
        question: 'Can I bulk-generate UUID v1 values here?',
        answer: 'Yes — generate a single UUID or bulk-generate up to 500 at once and copy them in one click.',
    },
] as const;

const jsonLd = {
    '@context': 'https://schema.org',
    '@graph': [
        {
            '@type': 'WebSite',
            '@id': `${site}#website`,
            url: site,
            name: 'genuuid.net',
            inLanguage: 'en',
        },
        {
            '@type': 'WebPage',
            '@id': `${pageUrl}#webpage`,
            url: pageUrl,
            name: title,
            description,
            isPartOf: { '@id': `${site}#website` },
            inLanguage: 'en',
        },
        {
            '@type': 'WebApplication',
            '@id': `${pageUrl}#app`,
            name: 'UUID v1 Generator',
            url: pageUrl,
            description,
            applicationCategory: 'DeveloperApplication',
            operatingSystem: 'Any',
            offers: { '@type': 'Offer', price: '0', priceCurrency: 'USD' },
        },
        {
            '@type': 'FAQPage',
            '@id': `${pageUrl}#faq`,
            mainEntity: faqItems.map((item) => ({
                '@type': 'Question',
                name: item.question,
                acceptedAnswer: {
                    '@type': 'Answer',
                    text: item.answer,
                },
            })),
        },
    ],
};
---

<BaseLayout title={title} description={description} jsonLd={jsonLd}>
  <main
    id="main"
    class="relative mx-auto flex min-h-screen max-w-4xl flex-col gap-8 px-4 py-12 sm:px-6 md:gap-10 md:py-16 lg:py-20"
  >
    <header class="animate-float-up space-y-4">
      <div class="space-y-3">
        <p class="font-mono text-xs uppercase tracking-widest text-white/40">
          genuuid.net
        </p>
        <h1 class="text-3xl sm:text-4xl font-semibold tracking-tight text-white">
          UUID v1 Generator (Timestamp)
        </h1>
        <p class="text-white/70 leading-relaxed max-w-prose">
          UUID v1 is timestamp-based. It’s useful for legacy systems, but it can
          reveal information (like generation time and node identifier) that you
          may not want to expose publicly. For most modern apps, prefer v4 or v7.
        </p>
      </div>

      <div class="flex flex-wrap items-center gap-2 font-mono text-xs text-white/50">
        <span class="uppercase tracking-widest">More:</span>
        <a
          href="/"
          class="rounded-md border border-white/10 bg-white/5 px-2 py-1 text-white/70 hover:text-emerald-200 hover:border-emerald-400/40 transition-colors"
        >
          All versions
        </a>
        <a
          href="/v4/"
          class="rounded-md border border-white/10 bg-white/5 px-2 py-1 text-white/70 hover:text-emerald-200 hover:border-emerald-400/40 transition-colors"
        >
          UUID v4
        </a>
        <a
          href="/v7/"
          class="rounded-md border border-white/10 bg-white/5 px-2 py-1 text-white/70 hover:text-emerald-200 hover:border-emerald-400/40 transition-colors"
        >
          UUID v7
        </a>
      </div>
    </header>

    <UuidApp client:load initialVersion="v1" />

    <FaqSection items={faqItems} />
  </main>
</BaseLayout>

