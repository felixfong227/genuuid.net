---
import BaseLayout from '../layouts/BaseLayout.astro';
import UuidApp from '../components/UuidApp';
import '../styles/global.css';
export const prerender = true;

const title = 'Instant UUID Generator | genuuid.net';
const description =
    'Generate RFC 4122 compliant UUIDs (v1, v4, v7) instantly in your browser. No server roundtrips, up to 500 IDs at once, ready to copy.';
---

<BaseLayout title={title} description={description}>
  <main
    id="main"
    class="relative mx-auto flex min-h-screen max-w-4xl flex-col gap-8 px-4 py-12 sm:px-6 md:gap-10 md:py-16 lg:py-20"
  >
    <UuidApp client:load />
  </main>
</BaseLayout>
